{
    "name": "Serve",
    "description": "A Slim Framework PHP REST Server",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "http://psalte.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Lester",
            "email": "Ben@psalte.com",
            "homepage": "http://www.expertcompsci.com/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.24",
        "davidepastore/slim-validation": "^0.5.1",
        "tuupola/cors-middleware": "^0.9.1"
    },
    "require-dev": {
    },
    "autoload": {
        "psr-4": {
            "Serve\\Exceptions\\": "src/Exceptions",
            "Serve\\Helpers\\": "src/Helpers"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Serve\\Exceptions\\": "src/Exceptions",
            "Serve\\Helpers\\": "src/Helpers"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public"
    }

}
